@model List<PROJECT_CLIENT.DTO.ArticleDTO>

@{
    ViewBag.Title = "Bài viết theo Tag";
}

<style>
    body {
        font-family: Arial, sans-serif;
        line-height: 1.6;
        margin: 0;
        padding: 0;
        background-color: #f5f5f5;
    }

    .container {
        max-width: 1200px;
        margin: 20px auto;
        padding: 0;
        background-color: #fff;
        border: 1px solid #ddd;
    }

    .header {
        background-color: #0066cc;
        color: #fff;
        padding: 10px 20px;
        text-align: center;
        font-size: 1.5em;
        font-weight: bold;
    }

    .content {
        padding: 20px;
    }

    h2 {
        color: #0066cc;
        font-size: 1.8em;
        margin-bottom: 20px;
        font-weight: 700;
    }

    .article-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 20px;
    }

    .article-item {
        display: flex;
        align-items: center;
        padding: 10px;
        border-bottom: 1px solid #eee;
    }

    .article-image {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 5px;
        margin-right: 15px;
        border: 1px solid #ddd;
    }

    .article-info a {
        text-decoration: none;
        color: #0066cc;
        font-weight: 500;
        font-size: 1.1em;
        display: block;
        margin-bottom: 5px;
    }

        .article-info a:hover {
            text-decoration: underline;
        }

    .article-info .text-gray-500 {
        color: #666;
        font-size: 0.9em;
    }

    .no-articles {
        color: #666;
        font-style: italic;
        padding: 10px;
    }

    .footer {
        background-color: #0066cc;
        color: #fff;
        text-align: center;
        padding: 10px;
        margin-top: 20px;
    }
</style>

<div class="container">
   
    <div class="content">
        <h2>Bài viết liên quan theo tag</h2>

        @if (Model.Count == 0)
        {
            <p class="no-articles">Không có bài viết nào với tag này.</p>
        }
        else
        {
            <div class="article-list">
                @foreach (var article in Model)
                {
                    <div class="article-item">
                        @if (!string.IsNullOrEmpty(article.ImagePath))
                        {
                            <img src="@article.ImagePath" alt="@article.NewsTitle" class="article-image" />
                        }
                        else
                        {
                            <img src="https://via.placeholder.com/100" alt="No Image" class="article-image" />
                        }
                        <div class="article-info">
                            <a href="@Url.Action("Details", "Home", new { id = article.NewsArticleId })">
                                @article.NewsTitle
                            </a>
                            <span class="text-gray-500">@article.CreatedDate.ToString("dd/MM/yyyy")</span>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>