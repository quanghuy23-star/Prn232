    <a class="@(string.IsNullOrEmpty(currentCategory) ? "active" : "")" asp-action="Index">Tất cả</a>
    @foreach (var cat in categories)
    {
        <a class="@(currentCategory == cat.Name ? "active" : "")"
           asp-action="Index" asp-route-categoryName="@cat.Name">
            @cat.Name
        </a>
    }
</div> *@

<div class="container">
    <div class="row">
        @foreach (var article in Model)
        {
            <div class="col-md-3 mb-5">
                <div class="card h-100">
                    <img src="@article.ImagePath" class="card-img-top" alt="image" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@article.NewsTitle</h5>
                        <p class="card-text">@article.NewsContent.Substring(0, Math.Min(article.NewsContent.Length, 150))...</p>
                        <a asp-controller="Home" asp-action="Details" asp-route-id="@article.NewsArticleId" class="btn btn-purple mt-2">Xem chi tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
