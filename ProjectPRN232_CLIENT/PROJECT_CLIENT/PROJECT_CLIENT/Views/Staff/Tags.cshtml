@model IEnumerable<PROJECT_CLIENT.DTO.TagDTO>
@{
    ViewData["Title"] = "Danh sách Tag";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}


<div class="d-flex justify-content-between mb-3">
    <a asp-action="Index" asp-controller="Staff" class="btn btn-secondary">← Quay lại</a>
    <a asp-action="CreateTag" class="btn btn-success mb-3">+ Thêm Tag</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên Tag</th>
            <th>Ghi chú</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tag in Model)
        {
            <tr>
                <td>@tag.TagName</td>
                <td>@tag.Note</td>
                <td>
                    <a asp-action="EditTag" asp-route-id="@tag.TagId" class="btn btn-sm btn-primary">Sửa</a>
                    <form asp-action="DeleteTag" asp-route-id="@tag.TagId" method="post" style="display:inline;"
                          onsubmit="return confirm('Bạn có chắc chắn muốn xóa?');">
                        <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
